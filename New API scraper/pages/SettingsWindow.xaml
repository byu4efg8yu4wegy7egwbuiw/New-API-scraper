<Window x:Class="New_API_scraper.pages.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:New_API_scraper.pages"
        mc:Ignorable="d"
        Title="Settings" Height="600" Width="500"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="window_drag">

    <Border CornerRadius="20" Background="#FF0A0A0A" BorderBrush="#FF00FF88" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#FF00FF88" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Settings" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="#FF00FF88" 
                          HorizontalAlignment="Center"/>
                
                <Button Content="âœ•"
                       Width="35"
                       Height="35"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#FFCCCCCC"
                       Cursor="Hand"
                       Click="close_btn_click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                   CornerRadius="17.5"
                                   x:Name="close_border">
                                <ContentPresenter HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="close_border" Property="Background" Value="#FFAA3333"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- Sort Mode Section -->
                    <Border Background="#FF1A1A1A" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Sort Mode" 
                                      FontSize="18" 
                                      FontWeight="Bold" 
                                      Foreground="White" 
                                      Margin="0,0,0,15"/>
                            
                            <RadioButton x:Name="newest_first_radio" 
                                        Content="Newest First" 
                                        GroupName="SortMode"
                                        Foreground="White" 
                                        FontSize="14"
                                        Margin="0,5"
                                        IsChecked="True"
                                        Checked="sort_mode_changed"/>
                            
                            <RadioButton x:Name="oldest_first_radio" 
                                        Content="Oldest First" 
                                        GroupName="SortMode"
                                        Foreground="White" 
                                        FontSize="14"
                                        Margin="0,5"
                                        Checked="sort_mode_changed"/>
                            
                            <RadioButton x:Name="highest_score_radio" 
                                        Content="Highest Score" 
                                        GroupName="SortMode"
                                        Foreground="White" 
                                        FontSize="14"
                                        Margin="0,5"
                                        Checked="sort_mode_changed"/>
                            
                            <RadioButton x:Name="random_order_radio" 
                                        Content="Random Order" 
                                        GroupName="SortMode"
                                        Foreground="#FF00FF88" 
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Margin="0,5"
                                        Checked="sort_mode_changed"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Video Settings Section -->
                    <Border Background="#FF1A1A1A" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Video Settings" 
                                      FontSize="18" 
                                      FontWeight="Bold" 
                                      Foreground="White" 
                                      Margin="0,0,0,15"/>
                            
                            <CheckBox x:Name="autoplay_videos_check" 
                                     Content="Auto-play videos" 
                                     Foreground="White" 
                                     FontSize="14"
                                     Margin="0,5"
                                     IsChecked="True"
                                     Checked="autoplay_changed"
                                     Unchecked="autoplay_changed"/>
                            
                            <CheckBox x:Name="loop_videos_check" 
                                     Content="Loop videos" 
                                     Foreground="White" 
                                     FontSize="14"
                                     Margin="0,5"
                                     IsChecked="True"
                                     Checked="loop_changed"
                                     Unchecked="loop_changed"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Content Filtering Section -->
                    <Border Background="#FF1A1A1A" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Content Filtering" 
                                      FontSize="18" 
                                      FontWeight="Bold" 
                                      Foreground="White" 
                                      Margin="0,0,0,15"/>
                            
                            <CheckBox x:Name="safe_mode_check" 
                                     Content="Safe mode only (hide explicit content)" 
                                     Foreground="White" 
                                     FontSize="14"
                                     Margin="0,5"
                                     Checked="safe_mode_changed"
                                     Unchecked="safe_mode_changed"/>
                            
                            <TextBlock Text="Posts per page:" 
                                      Foreground="#FFAAAAAA" 
                                      FontSize="12" 
                                      Margin="0,10,0,5"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Slider x:Name="posts_per_page_slider" 
                                       Grid.Column="0"
                                       Minimum="10" 
                                       Maximum="100" 
                                       Value="20" 
                                       TickFrequency="10"
                                       IsSnapToTickEnabled="True"
                                       Margin="0,0,10,0"
                                       ValueChanged="posts_per_page_changed"/>
                                
                                <TextBlock x:Name="posts_per_page_text" 
                                          Grid.Column="1"
                                          Text="20" 
                                          Foreground="White" 
                                          FontSize="14"
                                          VerticalAlignment="Center"
                                          MinWidth="25"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Advanced Settings Section -->
                    <Border Background="#FF1A1A1A" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Advanced Settings" 
                                      FontSize="18" 
                                      FontWeight="Bold" 
                                      Foreground="White" 
                                      Margin="0,0,0,15"/>
                            
                            <CheckBox x:Name="preload_images_check" 
                                     Content="Preload images for faster browsing" 
                                     Foreground="White" 
                                     FontSize="14"
                                     Margin="0,5"
                                     IsChecked="True"/>
                            
                            <CheckBox x:Name="high_quality_check" 
                                     Content="Use high quality images when available" 
                                     Foreground="White" 
                                     FontSize="14"
                                     Margin="0,5"
                                     IsChecked="True"/>
                            
                            <TextBlock Text="Download timeout (seconds):" 
                                      Foreground="#FFAAAAAA" 
                                      FontSize="12" 
                                      Margin="0,10,0,5"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Slider x:Name="timeout_slider" 
                                       Grid.Column="0"
                                       Minimum="5" 
                                       Maximum="60" 
                                       Value="30" 
                                       TickFrequency="5"
                                       IsSnapToTickEnabled="True"
                                       Margin="0,0,10,0"
                                       ValueChanged="timeout_changed"/>
                                
                                <TextBlock x:Name="timeout_text" 
                                          Grid.Column="1"
                                          Text="30s" 
                                          Foreground="White" 
                                          FontSize="14"
                                          VerticalAlignment="Center"
                                          MinWidth="35"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="reset_btn" 
                       Grid.Column="1"
                       Content="Reset to Defaults" 
                       Width="130" 
                       Height="40" 
                       Background="#FF333333" 
                       Foreground="White" 
                       BorderThickness="0"
                       FontSize="14"
                       Margin="0,0,10,0"
                       Cursor="Hand"
                       Click="reset_btn_click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                   CornerRadius="8"
                                   x:Name="reset_border">
                                <ContentPresenter HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="reset_border" Property="Background" Value="#FF555555"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button x:Name="save_btn" 
                       Grid.Column="2"
                       Content="Save &amp; Close" 
                       Width="120" 
                       Height="40" 
                       Background="#FF00AA44" 
                       Foreground="White" 
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="Bold"
                       Cursor="Hand"
                       Click="save_btn_click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                   CornerRadius="8"
                                   x:Name="save_border">
                                <ContentPresenter HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="save_border" Property="Background" Value="#FF00CC55"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Effect>
                        <DropShadowEffect Color="#FF00FF88" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
